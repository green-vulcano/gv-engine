			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>xalan</groupId>
			<artifactId>xalan</artifactId>
			<version>2.7.1</version>
			<type>jar</type>
			<exclusions>
				<exclusion>
					<artifactId>xml-apis</artifactId>
					<groupId>xml-apis</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.javassist</groupId>
			<artifactId>javassist</artifactId>
			<version>3.20.0-GA</version>
			<type>jar</type>
		</dependency>

		<!-- *************** TEST *************** -->
		<dependency>
			<groupId>xmlunit</groupId>
			<artifactId>xmlunit</artifactId>
			<version>1.5</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.skyscreamer</groupId>
			<artifactId>jsonassert</artifactId>
			<version>1.3.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockftpserver</groupId>
			<artifactId>MockFtpServer</artifactId>
			<version>2.2</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring</artifactId>
			<version>2.5.6</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<excludes>
                                       <exclude>*.zip</exclude>
                                </excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>*.zip</include>
				</includes>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>${maven-bundle-plugin.version}</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Bundle-Activator>it.greenvulcano.Activator</Bundle-Activator>
						<Export-Package>it.greenvulcano*;version=${project.version}</Export-Package>
						<Import-Package>
							org.slf4j;version="[1.6,2)";provider=paxlogging,
							javax.crypto,
							javax.crypto.spec,
							javax.jms,
							javax.management,
							javax.management.modelmbean,
							javax.naming,
							javax.naming.ldap,
							javax.servlet;version="[2.5,4)",
							javax.servlet.http;version="[2.5,4)",
							javax.script,
							javax.sql,
							javax.transaction;version="[1.0,2)",
							javax.xml.bind;version="[2.0,3)",
							javax.xml.parsers,
							javax.xml.registry,
							javax.xml.stream,
							javax.xml.transform,
							javax.xml.transform.dom,
							javax.xml.transform.stream,
							org.apache.axiom.om,
							org.apache.axiom.om.xpath,
							org.apache.commons.beanutils,
							org.apache.commons.codec.binary;version="[1.7,2)",
							org.apache.commons.codec.digest;
							org.apache.commons.collections.iterators,
							org.apache.commons.dbcp;version="[1.3,2)",
							org.apache.commons.io;version="[1.4,2)",
							org.apache.commons.lang3;version="[3.7,4)",
							org.apache.commons.text,
							org.apache.commons.net.ftp;version="[2.2,3)",
							org.apache.commons.net.time;version="[2.2,3)",
							org.apache.commons.net.util;version="[2.2,3)",
							org.apache.commons.pool;version=" [1.5,2)",
							org.apache.commons.pool.impl;version="[1.5,2)",
							org.apache.karaf.config.core,
							org.apache.log4j;version="[1.2.15,2)",
							org.apache.xml.resolver,
							org.apache.xml.resolver.tools,
							org.apache.xpath,
							org.jaxen,
							org.jaxen.dom,
							org.json,
							org.osgi.service.cm,
							org.osgi.framework;version="[1.7,2)",
							org.osgi.service.blueprint;version="[1.0.0,2.0.0)",
							org.w3c.dom,
							org.w3c.dom.traversal,
							org.xml.sax
						</Import-Package>
						<DynamicImport-Package>it.greenvulcano.*</DynamicImport-Package>
						<Embed-Dependency>*;scope=compile;type=jar</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
					</instructions>
				</configuration>
			</plugin>
		</plugins>

	</build>

</project>
