		</dependency>

		<dependency>
			<groupId>se.ugli.bigqueue</groupId>
			<artifactId>bigqueue</artifactId>
			<version>0.8.0</version>
			<exclusions>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>xml-resolver</groupId>
			<artifactId>xml-resolver</artifactId>
